
@{
    ViewBag.Title = "Show Selection";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <nav aria-label="breadcrumb" role="navigation">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/home">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Select Calculator</li>
        </ol>
    </nav>
    <div id="secondaryContainer">
        <h2>Select Calculator</h2>
    </div>
    <div class="row">
        <div class="col-md-6" id="ChartGeneratorSelector">
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title">Basic Selection</h4>
                    <hr />
                    <p class="card-text">Generate your ticket numbers according to the predefined strategies: the strategies are precisely developed in order to consider different aspects of possible outcome and return the weighted ticket numbers.</p>
                    <br />
                    <hr />
                    <a href="/NumberGenerator/basic" class="btn btn-lg btn-primary">Basic</a>
                </div>
            </div>
        </div>

        <div class="col-md-6" id="ChartGeneratorSelector">
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title">Advanced Selection</h4>
                    <hr />
                    <p class="card-text">Create your own strategy: choose distribution of odd/even numbers, include/exclude desired numbers, decide whether include previous numbers or not and so on and so forth. All the statistics provided for you to make the informed decision.</p>
                    <hr />
                    <a href="/NumberGenerator/index" class="btn btn-lg btn-primary">Advanced</a>
                </div>
            </div>
        </div>
    </div>
</div>
<style type="text/css">
    #basic,#advanced{
        height: 300px;
        width:280px;
        top:50px;
        left:150px;
        position: relative;
    }
    #basic{
        background-color:tomato;
    }
    #advanced{
        background-color:burlywood;
    }
    #ChartGeneratorSelector{
        text-align:center;
        padding-bottom:40px;

    }
</style>

